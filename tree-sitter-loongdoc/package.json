{
  "scripts": {
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip",
    "build": "tree-sitter generate",
    "test": "pnpm build && tree-sitter test",
    "pbuild": "pnpm build && pnpm precommit",
    "ptest": "pnpm pbuild && tree-sitter test",
    "precommit": "pre-commit run -a 2>&1 >> /dev/null || true",
    "compile": "gcc -shared -fPIC src/parser.c src/scanner.c -o build/loongdoc.so"
  },
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.22.6",
    "prebuildify": "^6.0.0"
  },
  "types": "bindings/node",
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "tree-sitter": [
    {
      "scope": "source.loongdoc",
      "injection-regex": "^loongdoc$"
    }
  ]
}
